{
    "compilerOptions": {
        "target": "es6",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "sourceMap": true,
        "outDir": "./target",
        "skipLibCheck": true,
    },
    "include": [
        "src",
        "db"
    ],
    "exclude": [
        "target"
    ]
}
